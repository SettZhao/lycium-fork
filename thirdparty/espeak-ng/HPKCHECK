source HPKBUILD > /dev/null 2>&1

logfile=${LYCIUM_THIRDPARTY_ROOT}/${pkgname}/${pkgname}_${ARCH}_${OHOS_SDK_VER}_test.log
checkprepare(){
    cd $pkgname-$ARCH-build
    sed -i '/^# \.test\.check:/,/^$/ s/^# //' Makefile
    sed -i '/^#check:/,/^$/ s/^#//' Makefile
    sed -i '/^# tests\/ssml-fuzzer\.check:/,/^$/ s/^# //' Makefile
    sed -i '/^espeak-ng-data\/phondata:/,/^$/ s/^/# /' Makefile
    sed -i '/^phsource\/phonemes\.stamp:/,/^$/ s/^/# /' Makefile
    sed -i '/^am_tests_/,/^tests_.*_DEPENDENCIES/ s/^/# /' Makefile
    sed -i '/^check_LTLIBRARIES = src\/libespeak-ng-test\.la/ s/^/#/' Makefile
    sed -i '/^check: check-am$/ s/^/#/' Makefile
    sed -i '/^check_PROGRAMS/,/tests\/ssml-fuzzer\.test\$(EXEEXT)$/ s/^/#/' Makefile
    sed -i 's/^check:\t\$(TEST:\.test=\.check)$/check: $(filter-out %windows-installer.check, $(TEST:.test=.check))/' Makefile
    cd $OLDPWD
    return 0
}
openharmonycheck() {
    res=0
    cd $pkgname-$ARCH-build
    make check > ${logfile} 2>&1
    res=$?
    cd $OLDPWD
    return $res
}