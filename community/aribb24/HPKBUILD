pkgname=aribb24
pkgver=v1.0.3
pkgrel=0
pkgdesc="A library for ARIB STD-B24, decoding JIS 8 bit characters and parsing MPEG-TS stream."
url="https://github.com/nkoriyama/aribb24"
archs=("armeabi-v7a" "arm64-v8a")
license=("LGPL")
depends=("libpng" "zlib")
makedepends=()

source="https://github.com/nkoriyama/$pkgname/archive/refs/tags/$pkgver.tar.gz"

autounpack=true
downloadpackage=true
buildtools="configure"

builddir=$pkgname-${pkgver:1}
packagename=$builddir.tar.gz

confflag=true

source envset.sh

host=
prepare() {
    mkdir -p $builddir/$ARCH-build
    if [ $ARCH == "armeabi-v7a" ]
    then
        setarm32ENV
        host=arm-linux
    elif [ $ARCH == "arm64-v8a" ]
    then
        setarm64ENV
        host=aarch64-linux
    else
        echo "${ARCH} not support"
        return -1
    fi
    if $confflag
    then
        cd $builddir
        ./bootstrap > $publicbuildlog 2>&1
        cd $OLDPWD
        confflag=false
    fi
}

build() {
    cd $builddir/$ARCH-build
    # PKG_CONFIG_LIBDIR="${pkgconfigpath}" 
    # 采用 -Wl, 方式避免libtool 设置 runpath
    PKG_CONFIG_LIBDIR="${pkgconfigpath}" PNG_CFLAGS="-I${LYCIUM_ROOT}/usr/libpng/$ARCH/include" \
        PNG_LIBS="-Wl,-L${LYCIUM_ROOT}/usr/libpng/$ARCH/lib -Wl,-lpng16 -Wl,-lz" \
        CFLAGS="-Wl,-L${LYCIUM_ROOT}/usr/libpng/$ARCH/lib -Wl,-lpng16 -I${LYCIUM_ROOT}/usr/libpng/$ARCH/include $CFLAGS" \
        ../configure "$@" --host=$host --with-pic --disable-dependency-tracking > $buildlog 2>&1
    $MAKE V=1 >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir/$ARCH-build
    $MAKE V=1 install >> $buildlog 2>&1
    cd $OLDPWD
}

check() {
    echo "The test must be on an OpenHarmony device!"
}

recoverpkgbuildenv() {
    unset host
    if [ $ARCH == "armeabi-v7a" ]
    then
        unsetarm32ENV
    elif [ $ARCH == "arm64-v8a" ]
    then
        unsetarm64ENV
    else
        echo "${ARCH} not support"
        return -1
    fi
}

# 清理环境
cleanbuild() {
    rm -rf ${PWD}/$builddir #${PWD}/$packagename
}
