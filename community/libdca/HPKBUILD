pkgname=libdca
pkgver=95c4bd8baee808ec563120f463111e2cd6cd240e
pkgrel=0
pkgdesc="libdca is a free library for decoding DTS Coherent Acoustics streams."
url="https://code.videolan.org/videolan/libdca"
archs=("armeabi-v7a" "arm64-v8a")
license=("GPL")
depends=()
makedepends=()

source="https://code.videolan.org/videolan/$pkgname.git"

downloadpackage=false
autounpack=false
buildtools="configure"

builddir=${pkgname}-${pkgver}
packagename=
host=

source envset.sh
cloneflag=true
prepare() {

    if [ $ARCH == "armeabi-v7a" ]
    then
        setarm32ENV
        host=arm-linux
    elif [ $ARCH == "arm64-v8a" ]
    then
        setarm64ENV
        host=aarch64-linux
    else
        echo prepare no support $ARCH !!
        return -1
    fi

    if [ $cloneflag == true ]
    then
        mkdir $builddir
        # master branch Fix -version-info and -export-symbols-regex typos.
        git clone ${source} $builddir > $publicbuildlog 2>&1
        if [ $? != 0 ]
        then
            return -2
        fi
        cd $builddir
        git reset --hard $pkgver >> $publicbuildlog 2>&1
        if [ $? != 0 ]
        then
            return -3
        fi
        cd $OLDPWD
        cloneflag=false
    fi
    cp -rf $builddir $builddir-$ARCH
}

build() {
    cd $builddir-$ARCH
    ./bootstrap > $buildlog 2>&1
    PKG_CONFIG_LIBDIR="${pkgconfigpath}" ./configure "$@" --host=$host >> $buildlog 2>&1
    $MAKE V=1 >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

# 打包安装
package() {
    cd $builddir-$ARCH
    $MAKE install >> $buildlog 2>&1
    cd $OLDPWD
}

# 进行测试的准备和说明
check() {
    echo "The test must be on an OpenHarmony device!"
}

# 环境恢复 如不需要可不写
recoverpkgbuildenv() {
    unset host
    if [ $ARCH == "armeabi-v7a" ]
    then
        unsetarm32ENV
    elif [ $ARCH == "arm64-v8a" ]
    then
        unsetarm64ENV
    else
        echo "$ARCH not support!"
        return -1
    fi
}

# 清理环境
cleanbuild() {
    rm -rf ${PWD}/$builddir $builddir-armeabi-v7a  $builddir-arm64-v8a
}
